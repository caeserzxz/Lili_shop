/* pages/evaluate/evaluate.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  font-size: 32rpx;
  background-color: #fff;
  font-weight: 600;
}

.swiper-tab-item {
  width: 50%;
  color: #999;
}

.active {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
}

.active::after {
  content: '';
  display: inline-block;
  position: absolute;
  bottom: 0;
  width: 24rpx;
  height: 6rpx;
  background-color: #f65236;
  left: 50%;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.hd_img image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.pj_title {
  font-size: 28rpx;
  flex-wrap: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.pj_box {
  display: flex;
  justify-content: space-between;
  margin-top: 70rpx;
}

.pj_btn {
  min-width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #fff;
  border: 1px solid #f65236;
  font-size: 28rpx;
  text-align: center;
  color: #f65236;
}

.pj_btn1 {
  border: 1px solid #e5e5e5;
  color: #333;
}
.price{
  display: flex;
  align-items: baseline;
}
