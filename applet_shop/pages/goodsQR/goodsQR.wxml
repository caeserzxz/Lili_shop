<view class='page'>
 <button open-type="share">
  <view class='bottom_box'>
    <!-- <view><image src='/images/goodsIcon04.png' />保存图片</view> -->
    <view class='vux-1px-l'>
      <image src='/images/goodsIcon01.png' />分享链接</view>
