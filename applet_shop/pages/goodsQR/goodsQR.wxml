            <view class='price'><text class='fs30'>￥</text><text class='fs54 ff'>{{goods.shop_price}}</text></view>
            <view class='user mt30'><image src="{{memberinfo.headimgurl ? memberinfo.headimgurl : '/images/df_tx.png'}}"/>{{memberinfo.nick_name}}</view>
          </view>
          <view class='rwmbox'>
            <image src="{{qrimg}}" data-vad="{{qrimg}}"/>
