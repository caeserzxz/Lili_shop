<!--pages/register/register.wxml-->
<view class='logo'>
  <view class='login_logo'>
    <image src="/images/APPLOGO.png" />
  </view>
  <view class='fs34 mt20'>
    微潮新商城
  </view>
</view>
<view class='login_box'>
  <view class='input_box'>
    <view class='label {{fly_out?"fly_out":""}}'>手机号</view>
    <input type='text' bindfocus='focus' bindblur='blur' bindinput='account' />
  </view>
  <view class='input_box mt30'>
    <view class='label {{fly_out1?"fly_out":""}}'>验证码</view>
    <input type='{{eyes?"text":"password"}}' bindfocus='focus' bindblur='blur' bindinput='password' />
    <view class='eye_img fs28 fw600 text-main '>
      获取验证
    </view>
  </view>
  <view class='input_box mt30'>
    <view class='label {{fly_out?"fly_out":""}}'>昵称</view>
    <input type='text' bindfocus='focus' bindblur='blur' bindinput='account' />
  </view>
  <view class='input_box mt30'>
    <view class='label {{fly_out?"fly_out":""}}'>密码</view>
    <input type='text' bindfocus='focus' bindblur='blur' bindinput='account' />
  </view>
  <view class='mt30'>
  <label class='checkbox'>
     <checkbox  checked></checkbox>
  </label>
    <text class='fs26 text-muted'>我同意<text class='text-default'>《新商城使用》</text>注册协议</text>
  </view>
</view>
<view class='btn_box login_btn mt30'>
  <navigator class='btn_primary'>注册</navigator>
</view>

<view class='tc fs30 text-muted fw600 mt30 pb30'>已有账号，
  <navigator url='/pages/login/login' class='text-default inblock'>立即登录</navigator>
</view>