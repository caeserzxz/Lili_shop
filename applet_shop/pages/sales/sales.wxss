  align-items: center;
  padding-bottom: 50rpx;
  font-size: 22rpx;
  color: #949494;
}

.weui-flex__time {
  padding-right: 30rpx;
  text-align: center;
  position: relative;
}

.weui-flex__time span.icons {
  position: absolute;
  top: 8rpx;
  left: -20rpx;
  background: #949494;
  width: 7px;
  height: 7px;
  border-radius: 50%;
  display: block;
}

.weui-flex__time::after {
  position: absolute;
  content: "";
  height: 40rpx;
  border-right: 1px solid #d2d2d2;
  top: 80rpx;
}

.wuli-cells .weui-flex:first-child {
  font-size: 24rpx;
  color: #323232;
}

.wuli-cells .weui-flex:first-child span.icons {
  background: #3cb45e;
}

.wuli-cells .weui-flex:last-child .weui-flex__time::after {
  content: none;
}

.wuli-cells .weui-flex:last-child {
  padding-bottom: 0;
}

