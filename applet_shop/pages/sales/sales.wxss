   border-color:#333333;
}
.link-btn.red {
  background-color: #f8584f;
  color: #fff;
  border-color:#f8584f;
}

/*wulimodel*/

.wulimodel {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
}

.close-box {
  position: absolute;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.model-box {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
}

.model-title {
  margin-top: 0;
  font-size: 26rpx;
}

.model-title .weui-cell__ft {
  border-left: 1px solid #eaeaea;
}

.model-title .close-icon {
  font-size: 36rpx;
  color: #323232;
  padding-left: 20rpx;
