/* pages/myorders/myorders.wxss */

.flex-tbtn {
  text-align: center;
  background: #fff;
  border-top: 1px solid #eaeaea;
}

.flex-tbtn .weui-flex__item {
  font-size: 32rpx;
  color: #323232;
  font-weight: 500;
  padding: 30rpx 0;
  color:rgba(153,153,153,1);
}

.flex-tbtn .weui-flex__item.active {
  font-weight: bold;
  position: relative;
}

.flex-tbtn .weui-flex__item.active::before {
  content: "";
 width: 24rpx;
	height: 6rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  background: #f65236;
}

.flex-tbtn .weui-flex__item.active::after {
  content: "";
  display: none;
  bottom: -14rpx;
  left: 50%;
  position: absolute;
  border-style: solid;
  border-width: 16rpx 16rpx 14rpx 16rpx;
  border-color: transparent transparent #fff transparent; /* 只在显示是边框设置颜色，其他为透明*/
  transform: rotate(360deg) translateX(-50%); /* 按需求旋转角度*/
  z-index: 2;
}
.orders-box .weui-cells:first-child {
  margin-top: 0;
}

.icon_hd {
  background: #f8a64f;
  color: #fff;
  display: block;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-right: 18rpx;
}

.icon_hd.bgred {
  background: #f8584f;
}

.title-bd {
  font-size: 26rpx;
  color: #323232;
  font-weight: 600;
}

.orders-box .pro-cell {
  -webkit-box-align: inherit;
  -webkit-align-items: inherit;
  align-items: inherit;
}

.pro-box {
  position: relative;
}

.pro-box::before {
  content: " ";
  position: absolute;
  left: 15px;
  top: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #e6e6e6;
  color: #e6e6e6;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.pro-box .pro-cell::before {
  content: none;
}

.orders-box .pro-cell .weui-cell__ft {
  padding-left: 20rpx;
}

.proimg {
  width: 140rpx;
  height: 140rpx;
  margin-right: 18rpx;
}

.pro-title {
  width: 530rpx;
}
.hj-cell{
  padding-top:40rpx; 
  padding-bottom:40rpx; 
  background-color: #fafafa;
  box-sizing: border-box;
  margin-right: 15px;
}
.pro-money {
  font-size: 28rpx;
  color: #3d3d3d;
  font-weight: 600;
}

.link-btn {
  width: 160rpx;
  display: inline-block;
  padding: 10rpx 0rpx;
  box-sizing: border-box;
  margin-left: 18rpx;
  background-color: #ffffff;
	border: solid 1px #e5e5e5;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}


.link-btn.black {
