/* pages/selectFans/selectFans.wxss */
.flex-tbtn {
  text-align: center;
  background: #fff;
}

.flex-tbtn .weui-flex__item {
  font-size: 32rpx;
  color: #323232;
  padding: 20rpx 0;
}

.flex-tbtn .weui-flex__item.active {
  position: relative;

}
.flex-tbtn .weui-flex__item.active .text1 {
  color: #333333;
  font-weight:bold;
}
.flex-tbtn .weui-flex__item.active::before {
  content: "";
  width: 24rpx;
	height: 6rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  background: #f65236;
}
.h-search {
  padding: 20rpx 30rpx;
}
.h-search_input {
  height:60rpx;
  background:rgba(244,244,244,1);
  line-height: 60rpx;
  padding-left: 90rpx;
  position: relative;
  flex:1;
}
.h-search_input input {
  font-size:30rpx;
  height: 60rpx;
  width: 100%;
  color:rgba(51,51,51,1);
}
.h-search_input image {
  position: absolute;
  left: 40rpx;
  width:34rpx;
  height:34rpx;
  top: 50%;
  transform: translateY(-50%);
}
.h-search .weui-cell__ft {
  line-height: 60rpx;
  padding-left: 30rpx;
}
.tx-img {
  width:60rpx;
height:60rpx;
border-radius:50%;
margin-right: 19rpx;
}
.btn1 {
  display: inline-block;
  width:60rpx;
  height:30rpx;
  background:rgba(246,82,54,1);
  line-height: 30rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-left: 13rpx;
}
.fw800{
  font-weight: 800;
}
.weui-cell__ft image{
  width: 20rpx;
  height: 20rpx;
}
.info{
  padding-left: 110rpx;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.info .row{
  margin-bottom: 4rpx;
}
.info .row text:nth-child(1){
  width: 300rpx;
  display: inline-block
}
.weui-cells .weui-cell{
  padding: 20rpx 0 10rpx 30rpx;
}
.weui-cells .weui-cell__ft{
  width: 90rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn2{
  display: inline-block;
  width:90rpx;
  height:30rpx;
  background:#333;
  line-height: 30rpx;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-left: 13rpx;
}