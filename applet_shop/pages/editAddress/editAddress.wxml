<!--pages/editAddress/editAddress.wxml-->
<view class="weui-cells mt0">
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class='fs28 text-muted'>收货人</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input tr fs28" type="text" value='张信哲' />
    </view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class='fs28 text-muted'>电话</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input tr fs28" type="tel" value='15920994177' />
    </view>
  </view>
  <view class="weui-cell weui-cell__ft_in-access">
    <view class="weui-cell__hd">
      <view class='fs28 text-muted'>所在地区</view>
    </view>
    <view class="weui-cell__bd tr fs28">
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          {{region[0]}} {{region[1]}} {{region[2]}}
        </view>
      </picker>
    </view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class='fs28 text-muted'>详细地址</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input tr fs28" type="text" value='广州市天河区岗顶146号一楼' />
    </view>
  </view>
</view>

<view class='btn_box mt100'>
  <navigator class='btn_primary'>保存更改</navigator>
</view>